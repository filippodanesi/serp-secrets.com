---
const { page, class: className } = Astro.props;
---

<nav aria-label="Pagination" class:list={['flex items-center justify-between text-sm', className]}>
    {
        page.url.prev ? (
            <a
                href={page.url.prev}
                class="text-muted hover:text-accent transition-colors"
                aria-label={`Go to page ${page.currentPage - 1} of ${page.lastPage}`}
            >
                ← Previous
            </a>
        ) : (
            <span class="text-muted/50">← Previous</span>
        )
    }
    
    <span class="text-muted font-mono" aria-current="page">
        {page.currentPage} / {page.lastPage}
    </span>
    
    {
        page.url.next ? (
            <a
                href={page.url.next}
                class="text-muted hover:text-accent transition-colors"
                aria-label={`Go to page ${page.currentPage + 1} of ${page.lastPage}`}
            >
                Next →
            </a>
        ) : (
            <span class="text-muted/50">Next →</span>
        )
    }
</nav>
