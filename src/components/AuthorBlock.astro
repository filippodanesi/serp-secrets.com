---
type Props = {
    display: 'byline' | 'full';
}

const { display } = Astro.props;

const author = 'Filippo Danesi';
const authorImage = '/filippo-danesi.webp';
const authorBio = 'For over 6 years, Filippo\'s passion has been exploring where code, content, and data meet. As the founder of SERPsecrets and an SEO specialist, he uses data and AI not just to increase search engine visibility, but to build clear and effective user journeys, turning complex analytics into straightforward strategies that deliver real results.';
const authorTwitter = 'https://www.linkedin.com/in/filippodanesi/';
---

{display === 'byline' && (
    <div class="flex items-center gap-3">
        <img src={authorImage} alt={author} class="w-8 h-8 rounded-full object-cover" />
        <div class="text-sm">
            <p class="font-medium text-main">{author}</p>
        </div>
    </div>
)}

{display === 'full' && (
    <section class="mt-12 pt-8 border-t border-main flex items-start gap-6">
        <img src={authorImage} alt={author} class="w-20 h-20 rounded-full object-cover" />
        <div class="flex-1">
            <h2 class="text-lg font-semibold text-main">About the Author: {author}</h2>
            <p class="mt-2 text-sm text-muted leading-relaxed">{authorBio}</p>
            <a href={authorTwitter} target="_blank" rel="noopener noreferrer" class="mt-3 inline-block text-sm text-main hover:underline">
                Follow on LinkedIn
            </a>
        </div>
    </section>
)}
