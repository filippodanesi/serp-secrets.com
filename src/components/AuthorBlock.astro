---
type Props = {
    display: 'byline' | 'full';
}

const { display } = Astro.props;

const author = 'Filippo Danesi';
const authorImage = '/images/authors/filippo-danesi.jpg';
const authorBio = 'Filippo Danesi è un consulente SEO e fondatore di SERPsecrets. Con oltre 15 anni di esperienza, aiuta le aziende a navigare la complessità dei motori di ricerca.';
const authorTwitter = 'https://twitter.com/filippodanesi';
---

{display === 'byline' && (
    <div class="flex items-center gap-3">
        <img src={authorImage} alt={author} class="w-8 h-8 rounded-full object-cover" />
        <div class="text-sm">
            <p class="font-medium text-main">{author}</p>
        </div>
    </div>
)}

{display === 'full' && (
    <section class="mt-12 pt-8 border-t border-main flex items-start gap-6">
        <img src={authorImage} alt={author} class="w-20 h-20 rounded-full object-cover" />
        <div class="flex-1">
            <h2 class="text-lg font-semibold text-main">About the Author: {author}</h2>
            <p class="mt-2 text-sm text-muted leading-relaxed">{authorBio}</p>
            <a href={authorTwitter} target="_blank" rel="noopener noreferrer" class="mt-3 inline-block text-sm text-accent hover:underline">
                Follow on Twitter
            </a>
        </div>
    </section>
)}
