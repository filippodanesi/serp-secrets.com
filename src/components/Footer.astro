const currentYear = new Date().getFullYear();

type SocialNetwork = 'LinkedIn' | 'GitHub' | 'Twitter';

const socialIcons: Record<SocialNetwork, string> = {
    LinkedIn: `<svg class="social-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"><path d="M0 0v24h24v-24h-24zm8 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.397-2.586 7-2.777 7 2.476v6.759z"/></svg>`,
    
    GitHub: `<svg class="social-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`,
    
    Twitter: `<svg class="social-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 512 462.799"><path fill="currentColor" d="M403.229 0h78.506L310.219 196.04 512 462.799H354.002L230.261 301.007 88.669 462.799h-78.56l183.455-209.683L0 0h161.999l111.856 147.88L403.229 0zm-27.556 415.805h43.505L138.363 44.527h-46.68l283.99 371.278z"/></svg>`
};
---

<footer class="w-full max-w-3xl mx-auto pt-16 pb-8 sm:pt-22 sm:pb-10">
    <div class="w-full text-center">
        {/* Top Section - Brand and Navigation */}
        <div class="w-full justify-between sm:flex sm:items-center sm:justify-between mb-6">
            {/* Brand Section */}
            <div class="flex items-center justify-center sm:justify-start mb-4 sm:mb-0">
                <a 
                    href="/" 
                    class="flex items-center gap-2 text-main hover:text-accent transition-colors"
                >
                    <span class="font-semibold text-lg">SERPsecrets</span>
                </a>
            </div>

            {/* Navigation Links */}
            <div class="flex flex-wrap justify-center gap-6 sm:gap-8">
                <a class="text-sm text-muted hover:text-accent transition-colors" href="/about/">About</a>
                <a class="text-sm text-muted hover:text-accent transition-colors" href="/contact/">Contact</a>
                <a class="text-sm text-muted hover:text-accent transition-colors" href="/privacy-policy/">Privacy</a>
                <a class="text-sm text-muted hover:text-accent transition-colors" href="/cookie-policy/">Cookies</a>
            </div>
        </div>

        {/* Divider */}
        <div class="border-t border-main mb-6"></div>

        {/* Bottom Section - Copyright and Social */}
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
            {/* Copyright */}
            <span class="text-xs text-muted order-2 sm:order-1">
                &copy;{currentYear} 
                <a 
                   href="https://www.filippodanesi.com" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="hover:text-accent transition-colors">
                    Filippo Danesi
                </a>
            </span>

            {/* Social Icons */}
            <div class="flex gap-2 order-1 sm:order-2">
                {siteConfig.socialLinks?.map((link) => (
                    <a 
                        href={link.href}
                        class="text-muted hover:text-accent transition-colors p-1 hover:bg-muted/30 rounded"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label={link.text}
                    >
                        <Fragment set:html={socialIcons[link.text as SocialNetwork]} />
                    </a>
                ))}
            </div>
        </div>
    </div>
</footer>

<style>
    .social-icon {
        fill: currentColor;
        transition: all 0.15s ease;
    }
</style>
